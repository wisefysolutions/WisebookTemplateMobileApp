modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Wisebook App Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Fix and Run App"

[[workflows.workflow]]
name = "Wisebook App Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && SKIP_PREFLIGHT_CHECK=true EXPO_NO_TYPESCRIPT_SETUP=1 npx expo start --web --port 5000 --no-dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Fix and Run App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && rm -rf node_modules && npm install --force && npx expo start --web --port 5000 --no-dev"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd /home/runner/workspace && SKIP_PREFLIGHT_CHECK=true EXPO_NO_TYPESCRIPT_SETUP=1 npx expo start --web --port 5000 --no-dev"]

[[ports]]
localPort = 5000
externalPort = 80
